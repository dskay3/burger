<img src="../../assets/img/burger.png" id="imgBurger" alt="burger-picture">
<div class="row">
  <div class="col-sm-12 text-center">
  <h1> Eat-Da-Burger </h1>
  </div>

<div class="row">
  <div class="col-sm-6">
  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li class="undevoured-list">
          {{this.burger_name}}

          {{> burgers/delete-burger}}

          <form action="/{{this.id}}?_method=PUT" method="POST" class="devourBtn">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Devour It!</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
  </div>

  <div class="col-sm-6">
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li class="devoured-list">
            {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <form class="create-update-form" action="/" method="POST">
      <div class="form-group">
        <input type="text" id="burger_create" name="burger_name">
      </div>

      <button type="submit">Submit</button>
    </form>

    <br>
    <p class="text-center">Enter a burger you want to eat and click the "Submit" button.</p>
  </div>
</div>